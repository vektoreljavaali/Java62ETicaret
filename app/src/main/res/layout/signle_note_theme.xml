<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:background="@color/mymessage"
    android:layout_margin="10px"
    android:layout_marginBottom="15px"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/note_list_profile_image"
            android:src="@mipmap/note"
            android:layout_width="match_parent"
            android:layout_height="60dp"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15px"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="16"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/notetitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Muhammet Ali HOCA"
                android:textSize="18dp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp">
<TextView
    android:id="@+id/notecontext"
    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
    android:layout_width="match_parent"
    android:textSize="11dp"
    android:layout_height="match_parent">

</TextView>
         </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/note_list_time"
        android:textSize="13dp"
        android:text="14:28"
        android:textColor="#F11515"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

    </TextView>    </LinearLayout>

</LinearLayout>
</RelativeLayout>